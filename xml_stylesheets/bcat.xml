<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#d5ffe2"
    android:id="@+id/r">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MLRIT"
        android:id="@+id/mlrit"
        android:onClick="mlrit"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView16" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VJIT"
        android:id="@+id/vjit"
        android:onClick="vjit"
        android:layout_below="@+id/mlrit"
        android:layout_alignStart="@+id/mlrit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BVRIT"
        android:id="@+id/bvrit"
        android:onClick="bvrit"
        android:layout_below="@+id/vjit"
        android:layout_alignStart="@+id/vjit" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VITB"
        android:id="@+id/vitb"
        android:onClick="vitb"
        android:layout_below="@+id/bvrit"
        android:layout_alignStart="@+id/bvrit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BCAT applications"
        android:id="@+id/textView15"
        android:textSize="25sp"
        android:layout_alignEnd="@+id/mlrit"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#0219ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GUIDELINES:"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1.Fill in the details of the application form.The links are provided below."
        android:id="@+id/textView17"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2.A demand draft of the application fee specified by the college has to be submitted along with the bcat application form."
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true" />

</RelativeLayout>
